{
  "name": "slack-ui",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "website:dev": "vite --config scripts/website.js",
    "website:build": "vite build --config scripts/website.js",
    "build:styles": "gulp --gulpfile scripts/styles.js",
    "build:es": "rollup --config scripts/es.js",
    "build:umd": "rollup --config scripts/umd.js",
    "build": "npm run build:styles && npm run build:es && npm run build:umd",
    "lint": "eslint --fix --ext .js,.ts,.vue .",
    "lintstyle": "stylelint --fix **/*.{vue,css,scss}",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@vitejs/plugin-vue": "^1.6.0",
    "@vue/compiler-sfc": "^3.2.6",
    "del": "^6.0.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-vue": "^7.17.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-sass": "^5.0.0",
    "highlight.js": "^11.2.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "markdown-it-anchor": "^8.3.0",
    "markdown-it-container": "^3.0.0",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.38.2",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "typescript": "^4.4.2",
    "uslug": "^1.0.4",
    "vite": "^2.5.1",
    "vite-plugin-md": "^0.11.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.3",
    "clipboard": "^2.0.8",
    "vue": "^3.2.6",
    "vue-router": "^4.0.11"
  }
